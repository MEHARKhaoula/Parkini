<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkingDetailFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"



            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ivIcon"
                    android:contentDescription="Icon to be displayed after result"

                    android:layout_margin="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:contentDescription="Icon to be displayed after result"

                    android:layout_margin="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/parkingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="90dp"

                    android:layout_marginBottom="20dp"
                    android:text="Parking Val d'hydra"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    />

            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout  android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="40.00dp"
                android:layout_marginTop="10.00dp"
                android:layout_marginEnd="36.00dp"
                android:elevation="2dp"
                android:padding="10.00dp"

                >

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/textViewTitre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking jardin d'essai"
                    android:textStyle="bold"


                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="16sp"
                    />
                <TextView
                    android:textColor="#696969"
                    android:id="@+id/textViewlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.00dp"
                    android:text="Alger"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTitre"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.00dp"

                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewlocation"
                    app:layout_constraintLeft_toLeftOf="parent"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/section1"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        >
                        <TextView
                            android:id="@+id/textViewEtat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="2.00dp"
                            android:text="Ferme"
                            android:textColor="#F00"


                            />

                        <TextView
                            android:id="@+id/textViewTaux"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-65%"
                            android:layout_marginTop="2.00dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="#696969"


                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"

                        android:id="@+id/section2">
                        <TextView
                            android:id="@+id/textViewKilom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.00dp"
                            android:text="12,95 km"
                            android:drawablePadding="10dp"
                            android:textColor="#1974D2"


                            app:layout_constraintStart_toStartOf="@id/textViewlocation"
                            app:layout_constraintTop_toBottomOf="@+id/textViewlocation" />

                        <TextView
                            android:id="@+id/textViewTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="2.00dp"
                            android:text="14 min"
                            android:textColor="#696969"


                            app:layout_constraintStart_toEndOf="@+id/textViewKilom"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView" />

                    </LinearLayout>
                </RelativeLayout>











            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Horaire"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="36dp"


                android:elevation="2dp"
                android:padding="10.00dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="00:00 Ã  19:00"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Dimanche"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Tarif"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="36dp"

                android:elevation="2dp"
                android:padding="10.00dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="120.00 DZD"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 heure"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangeAddress"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="50sp"
                android:layout_marginTop="40sp"
                android:layout_marginEnd="50sp"
                android:text="Reservation"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>