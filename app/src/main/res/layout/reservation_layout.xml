<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:id="@+id/reservationCard"
    android:paddingStart="4dp"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/greypurple_circular_border"
    android:orientation="vertical"

    >


    <TextView
        android:id="@+id/textViewTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parking jardin d'essai"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="145dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calendrier" />
    <TextView
        android:id="@+id/textViewdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hussein dey . Alger"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"

        />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@+id/heurefin"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/montre" />
        <TextView
            android:id="@+id/heuredebut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hussein dey . Alger"

            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/heurefin"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewTitre"
            app:layout_constraintTop_toTopOf="parent" />







    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="15dp"
        android:layout_height="18dp"
    android:layout_marginStart="20dp"
        app:srcCompat="@drawable/montre"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:id="@+id/heurefin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:text="Hussein dey . Alger"
        android:textSize="14sp"
        />
</LinearLayout>




</LinearLayout>

